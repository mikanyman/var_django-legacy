/* ---------- topnavi ---------- */
#topnavi {
	/* Tyyppi Ingervo */
	/*
	text-align: center;
	width: 912px;
	height: 25px;
	padding-left: 68px;
	background: #bbcc44;
    background-image: url(/img/liuku.gif);
    background-repeat: repeat-x;
	border-top: 1px solid #000;
	border-bottom: 1px solid #000;
	*/	
	/* Tyyppi Muradora */
	float: left;
	width: 100%;
	background: #8DA4D4;
	font-family: Verdana;
	font-size: 13px;
	line-height: normal;
}
/* Tyyppi Muradora */
#topnavi ul {
	margin: 0;
	padding: 0 10px 0 20px;
	list-style: none;
	}
#topnavi li {
	/* Tyyppi Ingervo */
	/*
	float: left;
	list-style: none;
	*/
	/* Tyyppi Muradora */
	display: inline;
	margin: 0;
	padding: 0;
}
#topnavi a {
	/* Tyyppi: Ingervo */
	/*
	float: left;
	display: block;
	width: auto;
	text-align: center;
	font-size: 14px;
	font-family: Verdana;
	text-decoration: none;
	color: #fff;
	border-right: 1px solid #000;
	padding: 4px 16px 4px 16px;
	*/
	/* Tyyppi Muradora */
	float: left;
	background: url("/img/muradora/tableft.gif") no-repeat left top;
	margin: 0;
	padding: 0 0 0 4px;
	text-decoration: none;
	/* border-bottom: solid 1px #8DA4D4; */
}
/* Tyyppi: Adopted from Muradora */
#topnavi a span {
	float: left;
	background: url("/img/muradora/tabright.gif") no-repeat right top;
	display: block;
	padding: 4px 15px 4px 6px;
	color: #666;
	}

/* Commented Backslash Hack hides rule from IE5-Mac \*/
