/* ---------- wrap ---------- */
#wrap {
	width: 980px;
	margin: 0 auto;
	border: solid 1px #666;
	background-color: #fff;
	}

/* ---------- header, footer ---------- */
#header {
	height: 20px;
	background-color: #99A8BB;
	border-bottom: solid 1px #666;
	padding-top: 3px;
	padding-bottom: 3px;
	padding-left: 8px;
	padding-right: 8px;
	color: #fff;
	font-size: 15px;
	font-family: Arial, Helvetica, sans-serif;
	}
#footer {
	clear: both;
	height: 19px;
	background-color: #99BBA8; /* #aba */
	border-top: solid 1px #666;
	padding-top: 4px;
	padding-bottom: 3px;
	color: #fff;
	font-size: 15px;
	font-family: Arial, Helvetica, sans-serif;
}
#header a, #footer a {
	color: #fff;
	text-align: center;
	padding-top: 4px;
}
#footer span {
	padding-left: 260px; 
}

/* ---------- headerlinks ---------- */
#log_in_out_img {
	float: left;
	margin-top: 2px;
	}
#log_in_out_txt {
	float: left;
    margin-left: 6px;
	}
#event {
	float: right;
	margin-right: 16px;
	}
#profile {
	float: right;
	margin-right: 16px;
	}
#lang {
    float: right;
	margin-top: 2px;
	}

/* ---------- topbanner ---------- */
#logo {
	width: 940px;
	height: 80px;
	padding: 2px 20px 0 20px;
	background-color: #8DA4D4;
	}
#logo_img {
	float: left;
	background-color: #fcc;
	background-image: url(/img/specs/mitta_y.gif);
	background-repeat: no-repeat;
}
#logotext {
	float: left;
	clear: right;
	left: auto;
	color: #efefef;
	font-family: Arial;
	font-size: 18px;
	line-height: 22px;
	margin-top: 8px;
	margin-left: 16px;
	}
#logo_slogan {
	float: right;
}

/* ---------- topnavi ---------- */
#topnavi {
	float: left;
	width: 100%;
	font-family: Verdana;
	font-size: 13px;
	line-height: normal;
	background: #8DA4D4 url(/img/muradora/bluepix.gif) repeat-x bottom left;
}
#topnavi ul {
	margin: 0;
	padding: 0 10px 0 20px;
	list-style: none;
	}
#topnavi li {
	display: inline;
	margin-bottom: 0;
	padding: 0;
}
#topnavi a {
	float: left;
	background: url("/img/muradora/tableft.gif") no-repeat left top;
	margin: 0 2px 0 0; /* alkujaan vain nolla */
	padding: 0 0 0 4px;
	text-decoration: none;
	border-bottom: solid 1px #8DA4D4;
}
#topnavi a span {
	float: left;
	background: url("/img/muradora/tabright.gif") no-repeat right top;
	display: block;
	padding: 4px 15px 4px 6px;
	color: #666;
	}

/* Commented Backslash Hack hides rule from IE5-Mac \*/
/*
#topnavi a span {
	float: none;
	}
*/
/* End IE5-Mac hack */

#topnavi a:hover {
	color: #E96701;
}

#topnavi a:hover span {
	color: #E96701;
	}

#topnavi a:active {
	background-position: 0% -42px;
}

#topnavi a:active span {
	background-position: 100% -42px;
	color: #F49510;
	}

body#etusivu a#etusivuLink,
body#verkkolehti a#verkkolehtiLink,
body#kuvagalleria a#kuvagalleriaLink,
body#keskustele a#keskusteleLink,
body#vaikuta a#vaikutaLink,
body#apua_ongelmiin a#apua_ongelmiinLink,
body#tuotteet a#tuotteetLink,
body#yhdistys a#yhdistysLink {
	background-position: 0% -42px;
	border-bottom: solid 1px #fff;
}

body#etusivu a#etusivuLink span,
body#verkkolehti a#verkkolehtiLink span,
body#kuvagalleria a#kuvagalleriaLink span,
body#keskustele a#keskusteleLink span,
body#vaikuta a#vaikutaLink span,
body#apua_ongelmiin a#apua_ongelmiinLink span,
body#tuotteet a#tuotteetLink span,
body#yhdistys a#yhdistysLink span {
	background-position: 100% -42px;
	color: #E96701;
	}

/* ---------- content ---------- */
#content_3col {
  padding-left: 200px; /* col_1 fullwidth */
  padding-right: 220px; /* col_3 fullwidth + (2 * col_2 padding) */
}
#content_2col {
  padding-left: 200px; /* col_1 fullwidth */
}
#content_3col .columns {
	position: relative;
	float: left;
}
#content_2col .columns {
	position: relative;
	float: left;
}

/* ---------- cols ---------- */
#col_1 {
	width: 180px; /* with padding = 200px */
	padding: 10px 10px;
	right: 220px; /* col_1 fullwidth + (2 * col_2 padding) */
	margin-left: -100%;
}
#col_2 {
	padding: 10px 10px;
	width: 100%;
}
#col_3 {
	width: 180px; /* with padding = 200px */
	padding: 10px 10px;
	margin-right: -220px; /* col_3 fullwidth + (2 * col_2 padding) */
}
