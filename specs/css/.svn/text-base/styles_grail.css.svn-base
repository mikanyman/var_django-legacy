body {
    min-width: 640px; /* (2 * (col_1 fullwidth + (2 * col_2 padding))) + col_3 fullwidth */
	background-color: #fff;
	/*
	background-image: url(/img/backgrounds/fading_background_8.png);
	background-repeat: repeat-x;
	*/
	background: transparent url(/img/background/bg_diag_grey.gif) repeat scroll 0% 0%
	}
a {
	color: #fff;
}
ul, li {
	margin: 0;
	padding: 0;
}
