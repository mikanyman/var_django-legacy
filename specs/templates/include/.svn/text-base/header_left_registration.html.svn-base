{% load i18n %}

<span id="log_in_out_img">
  <img src="http://www.tallsmall.fi:8080/site_media/icon/bitcons/trackback_orange.gif">
</span>
<span id="log_in_out_txt">
{% if user.is_authenticated %}
  <a href="/{{ lang }}/{{ profile }}/{{ event }}{% url auth_logout %}">{% trans "Log out" %}</a> |
  <a href="{% url auth_password_change %}">{% trans "Change password" %}</a> |
  <a href="{% url profiles_create_profile %}">{% trans "Manage profile" %}</a>
  <span class="welcome">{% trans "Welcome" %}, {{ user.first_name }}!</span>
{% else %}
  <a href="{% url auth_login %}">{% trans "Log in" %}</a> | 
  {% comment %}<a href="{% url registration_register %}">{% trans "Register" %}</a> | {% endcomment %}
  <a href="/{{ lang }}/{{ profile }}/{{ event }}/members/application/create/">{% trans "Apply for Membership" %}</a>
{% endif %}
</span>
