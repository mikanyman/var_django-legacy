{# guestbook/entry_list.html #}

{% load markup %}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<html>
<head>
<title>Anti-Spam Guestbook</title>
</head>

<BODY id="b1" bgcolor="#324796" LINK="#FFFFFF" ALINK="#FFFFFF" VLINK="CCCCCC">
<style TYPE="text/css" title="asgb">

body {
 FONT-SIZE : 12pt;
 BACKGROUND-COLOR: #324796;
 COLOR : #FFFFFF;
 FONT-FAMILY : 'arial', 'helvetica';
 FONT-WEIGHT : bold;
}

.GB {
  color: #FFFFFF;
  background-color: #324796;
 background-image:url();
}

.header {
  color:#FFFFFF;
  background-color: #324796;
}

.small {
  FONT-SIZE : 7pt;
  FONT-FAMILY : 'arial', 'helvetica';
}

A:hover {
  FONT-SIZE:12pt;
  color : #CCCCCC;
  FONT-FAMILY : 'arial', 'helvetica';
  font-weight : normal;
  TEXT-DECORATION : underline;
}

A {
  FONT-SIZE:12pt;
  color : #FFFFFF;
  FONT-FAMILY : 'arial', 'helvetica';
