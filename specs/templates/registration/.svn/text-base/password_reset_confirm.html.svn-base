{% extends "layouts/2col_sidebar_right.html" %}
{% load i18n %}

{% block main %}
<div class="form-box">
{% if validlink %}
  <fieldset>
  <legend>{% trans "Password reset" %}</legend>
  <form method="post" action=".">{% csrf_token %}
  <table id="pw_reset">
  {{ form.as_table }}
  </table>
  <input type="submit" value="{% trans 'Submit' %}" />
  </form>
  </fieldset>
{% else %}
  <fieldset>
  <legend>{% trans "Message" %}</legend>
  <div id="message">
    {% trans "Password reset failed" %}
  </div>
  </fieldset>
</div>
{% endif %}
{% endblock %}
