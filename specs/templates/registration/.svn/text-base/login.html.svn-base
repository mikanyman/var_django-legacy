{% extends "layouts/2col_sidebar_right.html" %}
{% load i18n %}

{% block main %}
<div class="form-box">
<fieldset>
  <legend>{% trans "Log in" %}</legend>
  <form method="post" action=".">{% csrf_token %}
  <table>
  {{ form.as_table }}
  </table>
  <input class="submit" type="submit" value="{% trans 'Log in' %}" />
  <input type="hidden" name="next" value="{{ next }}" />
  </form>
  <p>{% trans "Forgot username or password?" %} <a href="{% url auth_password_reset %}">{% trans "Send remeinder email" %}</a></p>
  <p>{% trans "Not member?" %} <a href="{% url registration_register %}">{% trans "Register" %}</a></p>
</fieldset>
</div>
{% endblock %}

